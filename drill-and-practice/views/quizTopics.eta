<% layout('./layouts/layout.eta') %>

<h2>Quiz</h2>

<% if (it.message) { %>

<%= it.message %>

<% } %>

<% if (it.topics && it.topics.length > 0) { %>

<p>Start your quiz by clicking on a topic below</p>

<ul id="topics">
<% it.topics.forEach(topic => { %>
  <li>
    <a href="/quiz/<%= topic.id %>"> <%= topic.name %> </a>
  </li>
<% }); %>
</ul>

<% } else { %>

<p>No topics yet</p>

<% } %>